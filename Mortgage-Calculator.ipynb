    "\"\"\"\n",
    "reject alphabetical inputs / special characters, and accept numbers only\n",
    "\"\"\"\n",
    "def get_input_num(prompt):\n",
    "    while True:\n",
    "        try:\n",
    "            val = float(input(prompt))\n",
    "        except ValueError:\n",
    "            print(f\"Must enter a number, without special characters\")\n",
    "        else:\n",
    "            break\n",
    "    return val"
   ]
  },
